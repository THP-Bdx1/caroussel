<%= render 'layouts/task_form'  %>
<div id="tabs">
  <div class="container">
    <ul class="category_titles">
    <% @categories.each do |category|%>
      <li class="category_title"><center><%= category.title  %></center></li>
      <div class="card" style="display:none">
        <center><ul class="category_content">
        <% category.tasks.each do |task|  %>
          <li>
            <%= task.title  %>
            <% unless task.deadline.nil? %>
            , to read: <%= task.deadline.strftime('%D')  %>
            <% end %>
          </li>
          <% end %>
        </ul></center>
      </div>
      <% end %>
    </ul>
  </div>
</div>
